<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/iffco_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cropNameDetail"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/iffco_green"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sowingText"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/iffco_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/harvestText"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/iffco_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adviceText"
        android:textSize="18sp"
        android:textColor="@color/iffco_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
