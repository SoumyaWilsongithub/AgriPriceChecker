<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/iffco_white"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <!-- Heading label -->
    <TextView
        android:id="@+id/labelSelectCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Crop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/iffco_green"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center" />

    <!-- Crop Spinner -->
    <Spinner
        android:id="@+id/cropSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <!-- View Chart Button -->
    <Button
        android:id="@+id/viewChartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Chart"
        android:textColor="@color/iffco_white"
        android:backgroundTint="@color/iffco_green"
        android:textStyle="bold" />
</LinearLayout>
