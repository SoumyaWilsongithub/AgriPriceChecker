<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Mode App Theme -->
    <style name="Theme.AgriPriceChecker" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/iffco_green</item>
        <item name="colorPrimaryVariant">@color/iffco_blue</item>
        <item name="colorOnPrimary">@color/iffco_white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/iffco_blue</item>
        <item name="colorOnSecondary">@color/iffco_white</item>

        <!-- Window background for light mode -->
        <item name="android:windowBackground">@color/iffco_white</item>

        <!-- StatusBar light icons on light background -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>

</resources>
